	<div id="t_153_14" style="position: absolute; left: 64.06%; top:29.36%;" class="c_153_2">
		CONSUMPTION
	</div>

	<div id="t_153_15" style="position: absolute; left: 63.39%; top: 31.66%; letter-spacing: 0.01em;" class="c_153_3">
